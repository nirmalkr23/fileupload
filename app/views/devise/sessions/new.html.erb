<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= button_to " #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn btn-primary btn-floating mx-1",data: { turbo: false } %><br />
              <% end %>
            <% end %>
          </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter a valid email address" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter password" %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <%#= f.check_box :remember_me, class: "form-check-input me-2" %>
              <%#= f.label :remember_me, "Remember me", class: "form-check-label" %>
            </div>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-body" %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Login", class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <%= link_to "Register", new_registration_path(resource_name), class: "link-danger" %></p>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</section>
<%#= render "devise/shared/links" %>
