

<!-- Pills navs -->
<div class="container p-5">
  <div class="text-center bg-info text-white p-3 ">
    <h2><%= @user.first_name%> <%= @user.last_name%></h2>
  </div>
  <br>
<ul class="nav nav-pills nav-justified mb-3" id="myTabs" role="tablist">
  <li class="nav-item col-6">
    <button class="nav-link btn btn-follower active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Follower</button>
  </li>
  <li class="nav-item col-6">
    <button class="nav-link btn btn-following" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Following</button>
  </li>
</ul>

<!-- Pills navs -->

<!-- Pills content -->
<div class="tab-content">
  <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
    <!-- Content for the Follower tab -->
    <% @followers.each do |follower| %>
      <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between"><%= link_to follower.first_name + ' ' + follower.last_name,profile_show_path(follower) %><%= render partial: 'profile/follow_button', locals: { user: follower } %></li>
    </ul>
    <% end %>
  </div>
  <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
    <!-- Content for the Following tab -->
    <% @following.each do |followee| %>
      <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between"><%= link_to followee.first_name + ' ' + followee.last_name,profile_show_path(followee) %> <%= render partial: 'profile/follow_button', locals: { user: followee }%></li>
      </ul>
    <% end %>
  </div>
</div>
</div>
<!-- Pills content -->
