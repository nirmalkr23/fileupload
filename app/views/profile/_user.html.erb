
<div class="bg-light pt-5">
    <div class="container ">
      <div class="row">
        <div class="col-md-4 text-center">
          <img 
            src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
            class="rounded-circle mb-3 img-fluid "
            alt="Profile Picture"
            height="150px"
            width="150px"
          />
          <h3><%= "#{user.first_name} #{user.last_name}" %></h3>
        </div>
        <div class="col-md-8">
          <div class="d-flex justify-content-between">
            <div><strong><%= user.posts.count%></strong> posts</div>
            <div><strong><%= user.followers.count%></strong> followers</div>
            <div><strong><%= user.followees.count%> </strong> following</div>
          </div>
          <div class="mt-3">
            <p>
              Bio: Lorem ipsum dolor sit amet, consectetur adipiscing elit.
              Quisque non felis a lorem ullamcorper bibendum.
            </p>
          </div>
            <% if user == current_user %>
          <div class="  d-flex">
              <%= link_to "Edit Profile",edit_user_registration_path,class:"btn btn-primary me-2"%>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger " %>
          </div>
            <% elsif  current_user %> 
                <%= render partial: 'profile/follow_button', locals: { user: @user } %>
            <% end %>
          
        </div>
      </div>

      <hr />
<% if @posts.any? %>
        <div class="row mt-4 align-items-center justify-content-center">
            <% @posts.each do |post| %>
            <%= render partial: 'profile/mypost', locals: { post: post } %>
            <% end %>
        </div>
      <% else %>
        <p class="text-muted"><%= @user.first_name %> hasn't created any posts yet.</p>
      <% end %>
    </div>
  </div>

